{
  "name": "@hodfords/nestjs-mailer",
  "version": "10.1.1",
  "description": "Simplifies sending emails in NestJS apps",
  "main": "index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "postbuild": "cp package.json dist/package.json",
    "format": "prettier --write \"libs/**/*.ts\"",
    "lint": "eslint \"libs/**/*.ts\" --fix",
    "prepare": "is-ci || husky",
    "version": "auto-changelog && git add CHANGELOG.md",
    "release:patch": "git add CHANGELOG.md && npm version patch --tag-version-prefix='' -f -m 'chore: release to %s'",
    "release:push": "git push --no-verify && git push --tags --no-verify",
    "lint-staged": "lint-staged",
    "cspell": "cspell"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hodfords-solutions/nestjs-mailer.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hodfords-solutions/nestjs-mailer/issues"
  },
  "homepage": "https://github.com/hodfords-solutions/nestjs-mailer#readme",
  "dependencies": {
    "handlebars": "4.7.8",
    "mjml": "4.15.3",
    "nodemailer": "6.9.14",
    "validator": "13.12.0"
  },
  "devDependencies": {
    "@nestjs/bull": "10.2.1",
    "@nestjs/common": "10.4.1",
    "@nestjs/core": "10.4.1",
    "@types/lodash": "4.17.7",
    "@types/mjml": "4.7.4",
    "@types/node": "22.5.0",
    "@types/nodemailer": "6.4.15",
    "@types/validator": "13.12.1",
    "@typescript-eslint/eslint-plugin": "8.3.0",
    "@typescript-eslint/parser": "8.3.0",
    "auto-changelog": "2.4.0",
    "bull": "4.16.0",
    "cspell": "8.14.2",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "9.1.5",
    "is-ci": "3.0.1",
    "lint-staged": "15.2.9",
    "lodash": "4.17.21",
    "prettier": "3.3.3",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.1",
    "typescript": "5.5.4"
  }
}
